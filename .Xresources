!------------------------------
! XFT settings
!------------------------------
Xft.dpi:                96
Xft.antialias:          true
Xft.rgba:               rgb
Xft.hinting:            true
Xft.autohint:           false
Xft.hintstyle:          hintslight
Xft.lcdfilter:          lcddefault

!------------------------------
! URxvt settings
!------------------------------
URxvt.scrollBar:        false
URxvt.saveLines:        10000
URxvt.cursorUnderline:  false
URxvt.letterspace:      -1
URxvt.depth:            32
URxvt.cursorBlink:      true
URxvt.geometry:         80x20

!------------------------------
! URxvt fonts
!------------------------------
!URxvt*font: xft:berry:size=8, \
!            xft:Kochi Gothic:antialias=false
!
URxvt*font: xft:Hack Nerd Font:pixelsize=12
URxvt*boldFont:

!------------------------------
! Color scheme
!------------------------------
#include "./.colors/arc"

!------------------------------
! Rofi settings
!------------------------------
rofi.color-enabled: true
rofi.color-window: #383c4a, #383c4a, #383c4a
rofi.color-normal: #404552, #ffffff, #404552, #304d72, #ffffff
rofi.color-active: #fdf6e3, #268bd2, #eee8d5, #268bd2, #fdf6e3
rofi.color-urgent: #fdf6e3, #dc322f, #eee8d5, #dc322f, #fdf6e3

rofi.lines: 12
rofi.eh: 2
rofi.width: 60
rofi.opacity: 80
rofi.separator-style: solid

